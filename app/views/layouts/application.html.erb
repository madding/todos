<!DOCTYPE html>
<html>
<head>
  <title>Todos</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="inner">
  <div>
    <% flash.each do |key, value| %>
      <p class="flash <%= flash_class(key) %>">
        <%= value %>
      </p>
    <% end %>
  </div>

  <%= yield %>
</div>

</body>
</html>
